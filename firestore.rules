rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /chats/{chatId} {
      allow read, write: if request.auth != null && (request.auth.token.email == 'mengal@example.com' || request.auth.token.email == 'zainee@example.com') && chatId == 'mengal_zainee';
      match /messages/{msgId} {
        allow read, create: if request.auth != null && (request.auth.token.email == 'mengal@example.com' || request.auth.token.email == 'zainee@example.com') && chatId == 'mengal_zainee';
      }
    }
  }
}